<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#000000">  <!-- Black background -->

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- ðŸ§­ Toolbar -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            style="@style/GoldToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:title="Manage Location"
            app:titleTextColor="#FFD700"
            app:navigationIcon="@drawable/ic_arrow_back_24"
            app:navigationIconTint="#FFD700" />

        <!-- ðŸ·ï¸ Address -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Address"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            app:boxStrokeColor="#FFD700"
            app:hintTextColor="#FFD700"
            android:layout_marginTop="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFD700"
                android:singleLine="true" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- ðŸ” Load Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLoad"
            android:text="Load Existing"
            style="@style/GoldButton"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- ðŸŒ Latitude -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:hint="Latitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxStrokeColor="#FFD700"
            app:hintTextColor="#FFD700"
            android:layout_marginTop="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputLat"
                android:inputType="numberDecimal|numberSigned"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFD700" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- ðŸŒ Longitude -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:hint="Longitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxStrokeColor="#FFD700"
            app:hintTextColor="#FFD700"
            android:layout_marginTop="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputLng"
                android:inputType="numberDecimal|numberSigned"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFD700" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- âš™ï¸ CRUD Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAdd"
                style="@style/GoldButton"
                android:text="Add"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnUpdate"
                style="@style/GoldButton"
                android:text="Update"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDelete"
                style="@style/GoldButton"
                android:text="Delete"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
